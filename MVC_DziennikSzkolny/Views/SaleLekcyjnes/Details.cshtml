@model MVC_DziennikSzkolny.Models.SaleLekcyjne

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Admin/_LayoutPanel.cshtml";
}

<h2>Details</h2>

<div>
    <h4>SaleLekcyjne</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.numerSali)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.numerSali)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.pietro)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pietro)
        </dd>

    </dl>
</div>
<div>
    Zajętość sali:
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Dzień tygodnia</th>
                <th>Godzina lekcyjna</th>
                <th>Klasa</th>
                <th>Nauczyciel</th>
                <th>Przedmiot</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var z in Model.zajetoscSali.OrderBy(x=>x.dzienTygodnia))
            {

<tr>
    <td>@z.dzienTygodnia</td>
    <td>@z.numerGodzinyLekcyjnej</td>
    <td>@z.klasa.symbol</td>
    <td>@z.nauczycielPrzedmiot.nauczyciel.Nazwisko @z.nauczycielPrzedmiot.nauczyciel.Imie</td>
    <td>@z.nauczycielPrzedmiot.przedmiot.nazwa</td>
</tr>

            }
        </tbody>

    </table>



        
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.saleLekcyjneID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<script>
    $(document).ready(function () {
        $("#AdminSale").addClass("active");
   });
   
</script>