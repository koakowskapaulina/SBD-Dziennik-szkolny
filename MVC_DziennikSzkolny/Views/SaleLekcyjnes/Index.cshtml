@model IEnumerable<MVC_DziennikSzkolny.Models.SaleLekcyjne>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/_LayoutPanel.cshtml";
}

<h2>Sale lekcyjne</h2>

<p>
    @Html.ActionLink("Dodaj nową salę", "Create")|
    @Html.ActionLink("Zarezerwuj sale", "Create", "ZajetoscSalLekcyjnyches")


</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.numerSali)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pietro)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.numerSali)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pietro)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.saleLekcyjneID }) |
            @Html.ActionLink("Details", "Details", new { id=item.saleLekcyjneID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.saleLekcyjneID })
         </td>
    </tr>
}

</table>

<script>
    $(document).ready(function () {
        $("#AdminSale").addClass("active");
    });
</script>