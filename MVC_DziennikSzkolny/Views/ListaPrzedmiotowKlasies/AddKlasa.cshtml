@model MVC_DziennikSzkolny.Models.ListaPrzedmiotowKlasy
@{
    ViewBag.Title = "AddKlasa";
}
@{
    Layout = "~/Views/Admin/_LayoutPanel.cshtml";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Przydziel klasę dla przedmiotu @ViewBag.przedmiot</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="control-label col-md-2">Klasa</div>
  <div class="col-md-10">
                @Html.DropDownList("klasaID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.klasaID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Nauczyciel przedmiotu</div>
      <div class="col-md-10">
                @Html.DropDownList("nauczycielPrzedmiotID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.nauczycielPrzedmiotID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
