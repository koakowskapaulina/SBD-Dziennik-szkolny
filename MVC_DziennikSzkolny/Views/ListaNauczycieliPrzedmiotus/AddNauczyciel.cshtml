@model MVC_DziennikSzkolny.Models.ListaNauczycieliPrzedmiotu

@{
    ViewBag.Title = "AddNauczyciel";
}
@{
    Layout = "~/Views/Admin/_LayoutPanel.cshtml";
}
<h2>Dodaj nauczyciela</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Przydziel nauczyciela do przedmiotu: @ViewBag.przedmiot</h4>
        <hr />
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <input id="przedmiotID" name="przedmiotID" type="hidden" class="form-control" value=@ViewBag.przedmiotID>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Nauczyciel</div>
                <div class="col-md-10">
                    @Html.DropDownList("nauczycielID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.nauczycielID, "", new { @class = "text-danger" })
                </div>
            </div>
       
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
